<ul>
<%
  if @order_desc
    bookmarks = @user.bookmarks.order("created_at DESC")
  else
    bookmarks = @user.bookmarks.order("created_at ASC")
  end
%>
  <% bookmarks.each do |bookmark| %>
    <li>
      <%= render partial: "resources/resource", locals: { resource: bookmark.resource } %>
      <%= raw render_user(bookmark.user) %>
      <%= form_for bookmark, :url => bookmark_archive_path(bookmark), :method => :put do |f|  %>
        <%= f.submit "Archive" %>
      <% end %>
    </li>
  <% end %>
</ul>
